global:
  resolve_timeout: 5m

  smtp_smarthost: "{{ alertmanager_smtp_smarthost }}"
  smtp_from: "{{ alertmanager_smtp_from }}"
  smtp_auth_username: "{{ alertmanager_smtp_user }}"
  smtp_auth_password: "{{ alertmanager_smtp_pass }}"
  smtp_require_tls: true

route:
  receiver: "default"
  group_by: ["alertname", "severity"]
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 3h

receivers:
  - name: "default"
    email_configs:
      - to: "{{ alertmanager_smtp_to | default(alertmanager_smtp_from) }}"
        send_resolved: true
